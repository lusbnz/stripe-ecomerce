generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  createdAt DateTime  @default(now())
  addresses Address[]
  orders    Order[]
}

model Address {
  id          String   @id @default(uuid())
  fullAddress String
  street      String
  district    String
  region      String
  city        String
  customerId  String
  customer    Customer @relation(fields: [customerId], references: [id])
  orders      Order[]

  @@index([customerId], map: "Address_customerId_fkey")
}

model Product {
  id            String         @id @default(uuid())
  name          String
  image         String
  pricing       BigInt
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  description   String
  category      String
  color         String
  quantity      Int
  orderProducts OrderProduct[]
}

model Order {
  id              String           @id @default(uuid())
  customerId      String
  addressId       String
  amount          BigInt
  paymentMethod   String
  description     String
  quantity        Int
  shippingDetails String
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  status          String
  address         Address          @relation(fields: [addressId], references: [id])
  customer        Customer         @relation(fields: [customerId], references: [id])
  products        OrderProduct[]
  statusLogs      OrderStatusLog[]

  @@index([addressId], map: "Order_addressId_fkey")
  @@index([customerId], map: "Order_customerId_fkey")
}

model OrderProduct {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  unitPrice BigInt
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@index([orderId], map: "OrderProduct_orderId_fkey")
  @@index([productId], map: "OrderProduct_productId_fkey")
}

model OrderStatusLog {
  id        String   @id @default(uuid())
  orderId   String
  oldStatus String
  newStatus String
  changedAt DateTime
  changedBy String
  order     Order    @relation(fields: [orderId], references: [id])

  @@index([orderId], map: "OrderStatusLog_orderId_fkey")
}
